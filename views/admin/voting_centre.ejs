<link rel="stylesheet" href="dashboard/assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    
</head>
<body>
  
    <%- include includes/header %>

    
  
  <!-- Layout -->

  <div class="layout">
    
    <!-- Home -->
    
    <main class="main">

      <style type="text/css">
        .submit-btn{
          border-radius:0; 
          outline:none; 
          margin-top:20px; 
          border:1px solid blue; 
          color:blue;
        }
        .main{
          padding-top:100px;
        }
      </style>
      <div class="content">   
      
      <!-- projects -->
      <div class="dashboard-wrapper">
            <div class="dashboard-finance">
                <div class="container-fluid dashboard-content">
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="page-header">
                                <h3 class="mb-2">Website Administrators' Dashboard </h3>
                            </div>
                            <div class="float-right">
                              <% if(message.length) {%>
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                  <b> <%- message %> </b>
                                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                              <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                     <div class="container" >
                          <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                              <div class="card">
                                <h5 class="card-header">Voting centre Information </h5>
                                <div class="card-body">
                                  <form action="/voting_centre" method="post">
                                    <div class="form-group">
                                        <label for="address" >Address of voting centre</label>
                                        <br>
                                        <input type="text" class="form-control" name="address" id="address" placeholder="Please input the address of a voting centre" />
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="lga">Local Government Area of voting centre</label>
                                        <select class="form-control" name="lga" id="lga">
                                            <option value="Isiokpo">Isiokpo</option>
                                            <option value="Port Harcourt">Port Harcourt</option>
                                            <option value="Obio Akpor">Obio Akpor</option>
                                            <option value="Tai">Tai</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="ward">Ward of voting centre</label>
                                        <select class="form-control" name="ward" id="ward">
                                            <option value="Isiokpo">Isiokpo</option>
                                            <option value="Port Harcourt">Port Harcourt</option>
                                            <option value="Obio Akpor">Obio Akpor</option>
                                            <option value="Tai">Tai</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                      <label for="description">Description of voting centre</label>
                                      <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="images" >Image URLs of voting centre</label>
                                        <br>
                                        <input type="text" class="form-control" name="images" id="images" placeholder="Add at least 3 comma-separated URLs of voting centre images" />
                                    </div>
                                    <button type="submit" class="btn submit-btn btn-primary">Submit</button>
                                  </form>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <div class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                            Copyright Â© 2018. All rights reserved. Dashboard for Rivers State Government Website. 
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end footer -->
            <!-- ============================================================== -->
        </div>
     
      
        

      <!-- Lines -->

      
    </div>
    </main>

    <!-- Blog List  -->
    
    
  </div>

<!-- SCRIPTS -->
<% include includes/footer %>

</body>
</html>