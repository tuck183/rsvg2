<body>
  
    <%- include ../includes/header %>

    
  
  <!-- Layout -->

  <div class="layout">
    
    <!-- Home -->
    
    <main class="main">

      <style type="text/css">
        .submit-btn{
          border-radius:0; 
          outline:none; 
          margin-top:20px; 
          border:1px solid blue; 
          color:blue;
        }
        .main{
          padding-top:100px;
        }
      </style>
      <div class="content">   
      
      <!-- projects -->
      <div class="dashboard-wrapper">
            <div class="dashboard-finance">
                <div class="container-fluid dashboard-content">
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="page-header">
                                <h3 class="mb-2">Website Administrators' Dashboard </h3>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                     
                        <div class="container" >
                          <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                              <div class="card">
                                <h5 class="card-header">Project Information Update</h5>
                                <div class="card-body">
                                  <form action="/update/project" method="post">
                                    <input type="hidden" name="id" value="<%- project._id %>">
                                    <div class="form-group">
                                      <label for="ministry" >Name of Ministry</label>
                                      <br>
                                      <input type="text" class="form-control" value="<%- project.ministry %>" name="ministry" id="ministry" placeholder="Input the ministry name in-charge" />
                                    </div>
                                    <div class="form-group">
                                      <label for="title" >Project title</label>
                                      <br>
                                      <input type="text" class="form-control" name="title" value="<%- project.title %>" id="title" placeholder="Input the project title"  />
                                    </div>
                                    <div class="form-group">
                                      <label for="category" >Project category</label>
                                      <br>
                                      <input type="text" class="form-control" value="<%- project.category %>" name="category" id="category" placeholder="Project category e.g Urban development"  />
                                    </div>
                                    <div class="form-group">
                                      <label for="location" >Project location</label>
                                      <br>
                                      <input type="text" class="form-control" value="<%- project.location %>" name="location" id="location" placeholder="Project location"  />
                                    </div>
                                    <div class="form-group" id="lga">
                                      <label for="lga">Project Local Government Area </label>
                                      <select class="form-control" name="lga" id="lga">
                                        <% for(var i = 0; i < lgas.length; i++) {%>
                                          <option value="<%- lgas[i]['_id'] %>"><%- lgas[i]['name'] %></option>
                                        <% } %>
                                      </select>
                                    </div>
                                    <div class="form-group">
                                      <label for="description">Project description</label>
                                      <textarea class="form-control" id="description" name="description" rows="3"><%- project.description %></textarea>
                                    </div>
                                    <div class="form-group">
                                      <label for="gains">Project gains</label>
                                      <textarea class="form-control" id="gains" name="gains" rows="3"><%- project.gains %></textarea>
                                    </div>
                                    <div class="form-group">
                                      <label for="tags" >Project tags</label>
                                      <br>
                                      <input type="text" class="form-control" value="<%- project.tags.join(' , ') %>" name="tags" id="tags" placeholder="Project tags e.g health, security"  />
                                    </div>
                                    <div class="form-group">
                                      <label for="status">Project status</label>
                                      <select class="form-control" id="status" name="status">
                                        <option class="option" value="completed">Completed</option>
                                        <option class="option" value="ongoing">Ongoing</option>
                                        <option class="option" value="commissioned">Commissioned</option>
                                        <option class="option" value="abandoned">Abandoned</option>
                                      </select>
                                    </div>
                                    <button type="submit" class="btn submit-btn btn-primary">Submit</button>
                                  </form>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <div class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                            Copyright © 2018. All rights reserved. Dashboard for Rivers State Government Website. 
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end footer -->
            <!-- ============================================================== -->
        </div>
     
      
      <!-- Footer -->
      <style type="text/css">
        .footer{
          margin-top:0px;
        }
        .newsletter{
          margin-bottom: 5%;
        }
      </style>

      <div class="content">   
      <!-- Footer -->
        <footer id="footer" style="background: rgb(5,68,168); height:150px; margin-top:0px; margin-bottom:0px; " class="footer">   
          <div class="container">
            <div class=" row">
              <div class="col-lg-12 col-sm-12 col-xs-12 col-md-12  text-center" style="margin-top:50px;">
                <p style="color:white;">COPYRIGHT © 2018 RIVERS STATE GOVERNMENT. ALL RIGHTS RESERVED.</p>
              </div>
            </div>
          </div>
        </footer>
      </div>


      <!-- Lines -->

      
    </div>
    </main>

    <!-- Blog List  -->
    
    
  </div>

