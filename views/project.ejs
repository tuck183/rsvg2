<script type="text/javascript">
  var expandicons = document.getElementsByClassName('expand');
  for (var i = 0; i < expandicons.length; i++){
    expandicons[i].addEventListener('click',function(e){
      var description = document.getElementById(e.target.dataset.info);
      if(description.style.display != 'none'){
        description.style.display = 'none';
        var iconClassNames = e.target.className;
        var newIconClassNames = iconClassNames.replace('fa-minus-circle','fa-plus-circle')
        e.target.className = newIconClassNames;
        e.target.style.color = 'rgb(17,68,168)';
      }
      else{
        description.style.display = 'block';
        var iconClassNames = e.target.className;
        var newIconClassNames = iconClassNames.replace('fa-plus-circle','fa-minus-circle')
        e.target.className = newIconClassNames;
        e.target.style.color = 'rgb(0,177,230)';
      }
    })
  }
  
</script>
